     int x = 900;
                x+=100; // x = x + 100;
            	x = 1000

            String str = "Java";
                str += " Programming"; // str = str +" Programming"


            String str1 = "I love ";
                str1+="Java ";   // str1 = str1 + "Java ";


            int y = 1000;
                y = y - 100;
                y-=100;

            int z = 2
                z = z*2;
                z *= 2;


            Operators:
            	+, -, *, /, %
            	++, --
